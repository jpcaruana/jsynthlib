<!-- XML tag, dtd, etc. -->
<device>
  <name>Motif</name>
  <manufacturer>Yamaha</manufacturer>
  <inquiryid>F07E7F06024300417[CDE]040000007FF7</inquiryid><!-- regex -->
  <infotext>...</infotext>
  <authors>...</authors>

  <module>Motif/motif.rb</module>
  <class>
    <name>YamahaMotifDevice</name>
  </class>

  <driver> <!-- should this have another name? -->
    <name>Normal Voice</name>
    <!-- inherit authors? -->
    <banknames>
      <name id="1">User</name>
      <!-- id optional, defaults to 0 then increments -->
      <!-- should probably have different name, since multiple drivers
           will have banks with same id. -->
    </banknames>
    <patchnames>
      <sequence id="patchnums">
	<name>id</name>
	<start>1</start>
	<end>127</end>
	<!-- format 1 to A-1, 18 to B-2, etc -->
	<value>{|id| "#{(65+id/16).chr}-#{id%16 + 1}"}</value>
      </sequence>
    </patchnames>

    <!-- the following are defaults to be inherited by sysex blocks -->
    <decoder>BE 7bit words</decoder>
    <checksum>
      <type>twos complement</type>
      <start>3</start><!-- byte offset, doesn't include status byte -->
      <end>-2</end>
      <address>-1</address>
    </checksum>

    <patch file="Motif/normalvoice.xml" />

    <class>
      <name>YamahaMotifSingleDriver</name>
      <args>
	<int>0x08</int>
	<int>0x0F</int>
      </args>
    </class>
    
  </driver>
  <!-- drum voices, banks, performances, masters, mixes, plg voices, etc -->
</device>
